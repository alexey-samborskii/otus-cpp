    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) ip_filter < ip_filter.tsv",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-lc",
                "exec \"${workspaceFolder}/build/ip_filter\" < \"${workspaceFolder}/ip_filter.tsv\""
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Show all elements (0 = unlimited)",
                    "text": "-gdb-set print elements 0",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Load libstdc++ pretty printers (пример пути, поменяй под свою систему)",
                    "text": "python import sys; sys.path.insert(0, '/usr/share/gcc/python'); from libstdcxx.v6 import register_libstdcxx_printers; register_libstdcxx_printers(None)",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}